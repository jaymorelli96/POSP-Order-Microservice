pipeline { 
    agent any 

    stages { 

		stage('jacoco') {
			steps {
			jacoco( 
			      execPattern: '**/**.exec',
			      classPattern: '**/classes',
				  sourcePattern: '**/src/main/java',
			      inclusionPattern: '**/*.class',
				  exclusionPattern: '**/*Test*.class'
			)

			}
		}		
		
	}


	post {
		always {
			cleanWs()
		}
	}

}
